def generate_face_pattern(size):    for i in range(size):        if i == 0:            print("   " + "*" * (size - 2) + "   ")        elif i == 1:            print("  * " + " " * (size - 4) + " *  ")        elif i == size // 2 - 1:            print("* " + " " * (size // 2 - 2) + "O" + " " * (size // 2 - 3) + " *")        elif i == size // 2:            print("* " + " " * (size // 2 - 3) + "-" * 4 + " " * (size // 2 - 4) + "*")        elif i == size // 2 + 1:            print("* " + " " * (size // 2 - 4) + "|" + " " * (size // 2 - 4) + "*")        elif i == size - 2:            print("  * " + " " * (size - 4) + " *  ")        else:            print("   " + " " * (size - 2) + "   ")
size = generate_face_pattern(size)
